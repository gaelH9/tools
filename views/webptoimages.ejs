<%-include('./partials/head'); %>
  <body>
    <%-include('./partials/navbar'); %>
      <div class="container">
          <h1 class="text-center">
              Webp to Image Converter
          </h1>
          <form action="/webptoimages" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="file" name="file" id="" required>
            </div>
            <div class="form-group">
                <label for="format">Format:</label>
                <select class="form-control" name="format" id="">
                    <option value="png" selected>png</option>
                    <option value="jpg">jpg</option>
                    <option value="gif">gif</option>
                    <option value="tiff">tiff</option>
                    <option value="pdf">pdf</option>
                    <option value="bmp">bmp</option>
                    <option value="wmf">wmf</option>
                </select>
            </div>
            <div class="form-group">
                <button class="btn btn-block btn-danger">
                    Download Image File
                </button>
            </div>
        </form>
        <br><br>
        <%-include('./partials/services');%>
        <%-include('./partials/jumbotron');%>
      </div>
</body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</html>