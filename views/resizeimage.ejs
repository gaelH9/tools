<%-include('./partials/head'); %>
  <body>
    <%-include('./partials/navbar'); %>
      <div class="container">
          <h1 class="text-center">
              Resize Image Online
          </h1>
          <form action="/resizeimage" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" type="file" name="file" id="" required>
            </div>
            <div class="form-group">
                <label for="width">Width:</label>
                <input type="number" name="width" required class="form-control">
            </div>
            <div class="form-group">
                <label for="height">Height:</label>
                <input type="number" name="height" required class="form-control">
            </div>
            <div class="form-group">
                <button class="btn btn-block btn-danger">
                    Download Image
                </button>
            </div>
        </form>
        <br><br>
        <%-include('./partials/services');%>
        <%-include('./partials/jumbotron');%>
      </div>
</body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
</html>