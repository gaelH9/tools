<%-include('./partials/head'); %>
  <body>
    <%-include('./partials/navbar'); %>
      <div class="container">
          <h1 class="text-center">
              Decrease Video Speed
          </h1>
          <form action="/decreasevideospeed" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">Upload Video:</label>
                <input class="form-control" type="file" name="file" id="" required>
            </div>
            <div class="form-group">
                <label for="speed">Choose Speed</label>
                <input id="basic" name="speed" type="text" data-slider-min="1" data-slider-max="3" data-slider-step="0.10" data-slider-value="2"/>
            </div>
            <div class="form-group">
                <button class="btn btn-block btn-danger">
                    Download Video
                </button>
            </div>
        </form>
        <br><br>
        <%-include('./partials/services');%>
        <%-include('./partials/jumbotron');%>
      </div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-slider/10.0.0/bootstrap-slider.min.js"></script>
<script>
   // Basic Slider
   var slider = new Slider("#basic", {
        tooltip: 'always'
      });
</script>
